
<h1>Create a new post</h1>
<div class="alert well">
	<div class ="jumbotron box-left color-background">
	  <%= form_for :post,url: posts_path, html: { multipart: true } do |f| %>
	<p>
	   <%= f.label :Topic %>
	   <%= f.text_field :Topic %> 	
	</p>
	 
	<p>
	   <%= f.label :Description%>
	   <%= f.text_area :Description%>
	</p>

	  <%= f.file_field :avatar %>


	<p>
       <%= f.submit %>
	</p>
	  
	   <% end %>
	 </div>
</div>